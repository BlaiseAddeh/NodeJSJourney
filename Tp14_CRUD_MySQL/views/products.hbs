<div class="container">
   <h1>MYSQL {{title}}</h1>

    <div class="text-right m-4">
        <a href="/products/create-form" class="btn btn-success">Create Prod</a>
    </div>  

   <table class="table table-dark">
       <tr class="d-flex">
           <th class="col-1">#ID</th>
           <th class="col-4"> Product Name</th>
           <th class="col-2">Price</th>
           <th class="col-3">SKU</th>
           <th class="col-2"></th>
       </tr>
       {{#each products}}
          <tr class="d-flex">
              <td class="col-1">{{this.id}}</td>
              <td class="col-4">{{this.name}}</td>
              <td class="col-2">{{this.price}}</td>
              <td class="col-3">{{this.sku}}</td>
              <td class="col-2">
                  <a href="/products/id/{{this.id}}">Show</a>
                  &nbsp;
                  <a href="/products/edit-form/id/{{this.id}}">Edit</a>
                  &nbsp;
                  <a style="color: orangered;" href="/products/delete/id/{{this.id}}">Delete</a>
              </td>
          </tr>
       {{/each}}
   </table>
</div>
